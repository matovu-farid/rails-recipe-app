<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-body d-flex">
    <div class="title w-100">
      <h4><%= @recipe.name %></h4>
      <div class="d-flex justify-content-between">
        <p>Preparation time: <%= @recipe.preparation_time %></p>
        <p>public: <%= @recipe.public %></p>
      </div>
      <p>cooking time: <%= @recipe.cooking_time %></p>
      <p><%= @recipe.decription %></p>
    </div>
    <div class="details"></div>
  </div>
</div>

<div class="d-flex w-100 h-100 d-none fixed-top justify-content-center align-items-center" id="popup">
  <div class="card text-center w-50">
    <div class="card-header">
      Add ingredient
    </div>
    <%= form_with url: recipe_foods_path(@recipe.id) do |form|%>
      <div class="card-body">
        <div class="d-flex flex-column mb-2">
          <%= form.label "Food", class:"form-label" %>
          <%= form.collection_select :food_id, Food.order(:name),:id,:name, include_blank: true, class:"form-control", :required => true %>
        </div>

        <div class="d-flex flex-column">
          <%= form.label :quantity, class:"form-label" %>
          <%= form.number_field :quantity, class:"form-control" %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <div class="d-flex justify-content-end">
          <button class="btn btn-secondary" onclick="(() => {
            document.getElementById('popup').classList.toggle('d-none')
            })()">Cancle</button>
          <button class="btn btn-primary mx-2" type="submit">Add</button>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="d-flex justify-content-between my-4">
  <%= link_to "Generate shopping list", general_shopping_list_path, class: "btn btn-info" %>
  <button class="btn btn-success" id="addIngredient" data-toggle="modal" data-target="#exampleModal" onclick="(() => {
    document.getElementById('popup').classList.toggle('d-none')
  })()">Add ingredient</button>
</div>

<div class="card">
  <div class="card-body d-flex">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Value</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% RecipeFood.where(recipe_id: @recipe.id).each do |ingredient| %>
          <tr>
            <td><%= Food.find_by(id: ingredient.food_id).name %></td>
            <td><%= "#{ingredient.quantity} #{Food.find_by(id: ingredient.food_id).measurement_unit}"%></td>
            <td><%= Food.find_by(id: ingredient.food_id).price * ingredient.quantity%></td>
            <td>
              <%= link_to "Delete", recipe_foods_path(@recipe), data:{method: :delete}, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
